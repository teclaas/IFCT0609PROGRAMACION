#include <stdio.h>

int main() {
    int i;

    // Usando el bucle for//
    printf("Usando el bucle for:\n");
    for (i = 1; i <= 100; i++) {
        printf("%d ", i);
    }
    printf("\n\n");

    // Usando el bucle while//
    printf("Usando el bucle while:\n");
    i = 1;
    while (i <= 100) {
        printf("%d ", i);
        i++;
    }
    printf("\n\n");

    // Usando el bucle do-while//
    printf("Usando el bucle do-while:\n");
    i = 1;
    do {
        printf("%d ", i);
        i++;
    } while (i <= 100);
    printf("\n");

    return 0;
}
